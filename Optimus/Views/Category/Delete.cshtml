@using Optimus.Entities
@model Category
@{
    ViewData["Title"] = "Create";
}

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-3">
            <h2 class="text-primary">Update Category</h2>
            <hr />
        </div>
        <input asp-for="Id" type="hidden"/>
        
        <div class="row mb-3">
            <label  asp-for="Name"></label>
            <input disabled asp-for="Name" class="form-control" />
        </div>
        
        <div class="row mb-3">
            <label asp-for="DisplayOrder"></label>
            <input disabled asp-for="DisplayOrder" class="form-control" />
        </div>
        
        <button class="btn btn-primary" type="submit">Delete</button>

    </div>
    <a asp-action="Index" asp-controller="Category">back to list</a>
</form>

@section scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}